<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.bottomsheet.BottomSheetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnPresistent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presistent Bottom Sheet"/>

        <Button
            android:id="@+id/btnModal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modal Bottom Sheet"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnBottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheet Dialog"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curved Material Alert Dialog"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>