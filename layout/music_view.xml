<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:padding="2dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgae_MV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/songNameMV"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@id/songDuration"
        android:layout_toEndOf="@id/imgae_MV"
        android:text="@string/song_name"
        android:textColor="@color/black"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/songAlbumMV"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/song_album"
        android:layout_toEndOf="@id/imgae_MV"
        android:layout_toStartOf="@id/songDuration"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:text="@string/tv_start"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"
        android:singleLine="true"/>

</RelativeLayout>